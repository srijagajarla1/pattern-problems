#include<bits/stdc++.h>
using namespace std;
int main()
{
	int i,j,k,rows;
	cout<<"enter number of rows"<<endl;
	cin>>rows;
	for(i=0;i<rows;i++)
	{
		for (j=rows-1;j>=i;j--)
		{
			cout<<" ";
		}
		for (k=1;k<=2*i+1;k++)
		{
			cout<<"*";
		}
		cout<<endl;
	}
}
