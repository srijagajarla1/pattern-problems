//1      1
//12    21
//123  321
//12344321


#include<bits/stdc++.h>
using namespace std;
int main()
{
	int i,j,k,l,rows;
	cout<<"enter numbr of rows"<<endl;
	cin>>rows;
	for(i=1;i<=rows;i++)
	{
		for(j=1;j<=i;j++)
		{
			cout<<j;
		}
		
		for(k=1;k<=(2*rows)-(2*i);k++)
		{
			cout<<" ";
		}
		for(l=i;l>=1;l--)
		{
			cout<<l;
		}
		cout<<endl;
	}
}
